tags:
  - projectBug
summary: 所有缺陷
description: 列出所有缺陷
operationId: "{{ uniqueOpId() }}"
parameters:
  - $ref: "@parameters/projectId.yml.njk"
  - $ref: "@parameters/accessToken.yml.njk"
  - $ref: "@parameters/offset.yml.njk"
  - $ref: "@parameters/limit.yml.njk"
responses:
  "200":
    description: 成功
    headers: 
      Access-Control-Allow-Origin:
        schema:
          type: string
          default: "*"
    content:
      application/json:
        schema:
          type: object
          properties:
            totalCount:
              type: integer
              description: 缺陷总数量
            bugList:
              type: array
              items:
                $ref: "@schemas/bugInfo.yml.njk"
  "500":
    description:  失败
    headers: 
      Access-Control-Allow-Origin:
        schema:
          type: string
          default: "*"
    content:
      application/json:
        schema:
          $ref: "@schemas/errInfo.yml.njk"